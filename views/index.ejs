<%- include partials/header.ejs %>
<div class="container" ng-controller="HomepageController as homeCtrl">
  <h1><%= title %></h1>
  <div>
    <p>Welcome to <%= title %></p>
    <form ng-submit="homeCtrl.submit()">
      <div class="input-group col-sm-4">
        <input type="number" 
          class="form-control" 
          ng-model="homeCtrl.quoteId" 
          placeholder="Enter quote id (3433)">
        <span class="input-group-btn">
          <submit class="btn btn-default" 
            ng-enabled="homeCtrl.quoteId" 
            type="submit" 
            value="Submit">Go!</submit>
        </span>
      </div>
    </form>
  </div>
</div>
<%- include partials/footer.ejs %>
